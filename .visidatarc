def median(values):
    L = sorted(values)
    return L[len(L) // 2]


vd.aggregator("median", median)


def sizeof_fmt(num, suffix="B"):
    for unit in ("", "Ki", "Mi", "Gi", "Ti", "Pi", "Ei", "Zi"):
        if abs(num) < 1024.0:
            return f"{num:3.1f}{unit}{suffix}"
        num /= 1024.0
    return f"{num:.1f}Yi{suffix}"


def vector_len(vector):
    """
    Split a space separated vector string into a vector and compute it's length
    """
    import numpy as np

    return np.sqrt(np.mean(np.array(vector.split(" "), dtype=np.float32) ** 2))
